{
    "manifest_version": 3,
    "name": "ChatGPT Timing Tracker",
    "version": "1.0",
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "storage",
        "activeTab",
        "scripting",
        "https://*/*"
    ],
    "host_permissions": [
        "https://*/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "logs.html"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}